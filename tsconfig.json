{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es6",
        "module": "commonJs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es6", "dom"],
        "removeComments": true,
        "noImplicitAny": true,
        "declaration": true,
        "sourceMap": true,
        "mapRoot": "./",
        "diagnostics": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "../node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "typings"
    ]
}